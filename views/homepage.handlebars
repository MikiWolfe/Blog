{{> navheader}}
{{#each posts as |post|}}
<div class="card">
    <h3 class="card-header"><a id="post-title" data-id="{{post.id}}" href="/post/{{post.id}}">{{title}}</a></h3>
    <p class="card-text">{{post_text}}</p>
    <p class="card-text"> -- {{user.username}}, {{format_date createdAt}}</p>
 <p class="card-text"></p>
</div>
{{/each}}

{{#each comments as |comment|}}
<div class="card">
<p class="card-text">{{comment.comment_text}}</p>
    <p class="card-text"> -- {{comment.user.username}}, {{format_date comment.createdAt}}</p>
</div>
{{/each}}
{{#if logged_in}}
    <form id="submit-comment">
        <div class="form-group">
            <label for="comment" class="leave-comment">Leave a comment:</label>
            <textarea class="form-control" id="comment"></textarea>
        </div>
        <button type="submit" class="btn" >Submit</button>
    </form>
    {{/if}}

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}

